@using IntelligenceReporting.WebApp.Services
@using IntelligenceReporting.Entities
@using IntelligenceReporting.WebApp.Structs
@inject ILocalStorageService _storage
@inject IFilterSelectionService _filterSelectionService

<MudSelect T="ReportPropertyClass"
           UserAttributes="@_attributes"
           Class="@Class"
           Label="Select Property Class..."
           Clearable="true"
           ToStringFunc="@(e => e.Name)"
           MultiSelection="true"
           AdornmentColor="Color.Primary"
           Margin="Margin.Dense"
           Variant="Variant.Outlined"
           AnchorOrigin="Origin.BottomCenter"
           SelectedValuesChanged="OnSelectedValuesChanged"
>
   @foreach (var item in Items)
   {
      <MudSelectItem Value="@item" />
   }
</MudSelect>